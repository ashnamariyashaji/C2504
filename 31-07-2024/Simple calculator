
input num1,num2
  print "Select operation (+, -, *, /): "
  input operation
  if operation = '+'
    result = num1 + num2
  else if operation = '-'
    result = num1 - num2
  else if operation = '*'
    result = num1 * num2
  else if operation = '/'
    if num2 != 0
      result = num1 / num2
    else
      print "Error: Division by zero"
  print "Result: " + result


using datatypes:

 double num1
  double num2
  double result
  print "Select operation (+, -, *, /): "
  char operation
  if operation = '+'
    result = num1 + num2
  else if operation = '-'
    result = num1 - num2
  else if operation = '*'
    result = num1 * num2
  else if operation = '/'
    if num2 != 0
      result = num1 / num2
    else
      print "Error: Division by zero"
  print "Result: " + result
