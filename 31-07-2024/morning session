8.input doctorSalary/month,  check if is 6 digit salary or not 
------------------------------------------------------------------
function IsSalary(Salary)
   IsSalary = (salary>>= 100000 and salary <= 999999)
   return IsSalary

function TestIsSalary()
   input salary
   if IsSalary(Salary)
   print("6 digit salary")
   else
   print("not 6 digit salary)

9.check tumour 
   is cancerous if  malignant  or not cancerous if benign
   tumour is string of text either malignant or benign

function IsCancerous(tumour->string)
    isCancerous = (tumour == "malignant")
    return isCancerous


10.else.if : To check the person adult, teenager or child 
----------------------------------------------------------------
    for given age 
    function IsAdult(age)  
        isAdult = (age >= 18)
        return isAdult; 
    function IsTeenager(age)  
        isTeenager = (age >= 13)
        return isTeenager; 
    function TestIsAdultTeenagerOrChild()
        Input age 
        if(IsAdult(age)) 
            print 'You are an adult.'
        else if(IsTeenager(age)) 
            print 'You are a teenager.'
        else
            print 'You are a child.'
        end if


11. check for car maintenance

    function SuggestMaintenance(serviceOption) 
        string suggestion;
        switch serviceOption
            case 'O':
                suggestion = "Change Oil and Replace Oil Filter"
                break
            case 'T':
                suggestion = "Rotate Tire and align them properly"
                break
            case 'B':
                suggestion = "Inspect the brake and replace them if necessary"
                break
            case 'A':
                suggestion = "Battery Check and Replace them"
                break
            default: 
                suggestion = "Some other reason"
                break 
        end switch 
        return suggestion
    function TestSuggestMaintenance()        
        Input serviceOption 
        suggestion = SuggestMaintenance(serviceOption)
        print suggestion        
    function TestSuggestMaintenance()      
        Input serviceOption 
        print SuggestMaintenance(serviceOption)
